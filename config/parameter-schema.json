{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Band Website Framework Configuration Schema",
  "description": "JSON Schema for Band Website Framework - Compatible with Queen Claude's design system tools",
  "type": "object",
  "properties": {
    "core": {
      "type": "object",
      "title": "Core Developer Controls",
      "description": "8 primary parameters that drive 80% of visual brand differentiation",
      "properties": {
        "primaryColorPalette": {
          "type": "object",
          "title": "Primary Color Palette",
          "description": "Main brand colors used throughout the site",
          "properties": {
            "primary": {
              "type": "string",
              "pattern": "^[a-z]+-\\d{1,3}$|^#[0-9A-Fa-f]{6}$",
              "description": "Main brand color (Tailwind class or hex)",
              "examples": ["amber-900", "#d97706"]
            },
            "secondary": {
              "type": "string",
              "pattern": "^[a-z]+-\\d{1,3}$|^#[0-9A-Fa-f]{6}$",
              "description": "Secondary accent color",
              "examples": ["teal-800", "#0f766e"]
            },
            "accent": {
              "type": "string",
              "pattern": "^[a-z]+-\\d{1,3}$|^#[0-9A-Fa-f]{6}$",
              "description": "Highlight color for CTAs and emphasis",
              "examples": ["purple-600", "#9333ea"]
            },
            "background": {
              "type": "string",
              "pattern": "^[a-z]+-\\d{1,3}$|^#[0-9A-Fa-f]{6}$",
              "description": "Base background color",
              "examples": ["black", "#000000"]
            },
            "surface": {
              "type": "string",
              "pattern": "^[a-z]+-\\d{1,3}$|^#[0-9A-Fa-f]{6}$",
              "description": "Card and surface color",
              "examples": ["gray-900", "#111827"]
            }
          },
          "required": [
            "primary",
            "secondary",
            "accent",
            "background",
            "surface"
          ],
          "additionalProperties": false
        },
        "typographyPair": {
          "type": "object",
          "title": "Typography System",
          "description": "Font pairing and sizing for headings and body text",
          "properties": {
            "headingFont": {
              "type": "string",
              "enum": [
                "Inter",
                "Playfair Display",
                "Montserrat",
                "Space Grotesk",
                "Oswald",
                "Roboto Slab"
              ],
              "description": "Font family for headings"
            },
            "bodyFont": {
              "type": "string",
              "enum": [
                "Inter",
                "Source Sans Pro",
                "Open Sans",
                "Roboto",
                "Lato",
                "Work Sans"
              ],
              "description": "Font family for body text"
            },
            "fontScale": {
              "type": "string",
              "enum": ["compact", "balanced", "spacious"],
              "description": "Overall font size scaling"
            }
          },
          "required": ["headingFont", "bodyFont", "fontScale"],
          "additionalProperties": false
        },
        "heroBackground": {
          "type": "object",
          "title": "Hero Section Background",
          "description": "Main hero section background configuration",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["image", "video", "gradient", "hybrid"],
              "description": "Type of hero background"
            },
            "source": {
              "type": "string",
              "description": "Path to image/video or gradient CSS definition"
            },
            "overlayIntensity": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Darkness of overlay (0 = transparent, 1 = opaque)"
            }
          },
          "required": ["type", "source", "overlayIntensity"],
          "additionalProperties": false
        },
        "sectionBackgroundStrategy": {
          "type": "object",
          "title": "Section Background Strategy",
          "description": "Background type for each main section",
          "properties": {
            "about": {
              "type": "string",
              "enum": ["video", "gradient", "image", "solid"]
            },
            "shows": {
              "type": "string",
              "enum": ["video", "gradient", "image", "solid"]
            },
            "gallery": {
              "type": "string",
              "enum": ["video", "gradient", "image", "solid"]
            },
            "contact": {
              "type": "string",
              "enum": ["video", "gradient", "image", "solid"]
            }
          },
          "required": ["about", "shows", "gallery", "contact"],
          "additionalProperties": false
        },
        "animationIntensity": {
          "type": "string",
          "enum": ["minimal", "moderate", "full"],
          "title": "Animation Intensity",
          "description": "Overall level of motion and effects (minimal = performance, full = immersive)"
        },
        "colorTemperature": {
          "type": "string",
          "enum": ["warm", "neutral", "cool"],
          "title": "Color Temperature",
          "description": "Warm/cool bias applied to entire color palette"
        },
        "contrastLevel": {
          "type": "string",
          "enum": ["subtle", "balanced", "high"],
          "title": "Contrast Level",
          "description": "Overall contrast across all components"
        },
        "borderRadiusScale": {
          "type": "string",
          "enum": ["sharp", "subtle", "modern", "rounded"],
          "title": "Border Radius System",
          "description": "Global border radius aesthetic (sharp = 0px, rounded = 12px+)"
        }
      },
      "required": [
        "primaryColorPalette",
        "typographyPair",
        "heroBackground",
        "sectionBackgroundStrategy",
        "animationIntensity",
        "colorTemperature",
        "contrastLevel",
        "borderRadiusScale"
      ],
      "additionalProperties": false
    },
    "genre": {
      "type": "object",
      "title": "Genre Flexibility Controls",
      "description": "8 additional parameters for fine-tuning across music genres",
      "properties": {
        "particleEffectsDensity": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "title": "Particle Effects Density",
          "description": "Atmospheric particle density (0 = clean, 1 = heavy effects)",
          "genre_mapping": {
            "edm_pop": 1.0,
            "indie_rock": 0.4,
            "metal_rock": 0.6
          }
        },
        "glowIntensity": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "title": "Glow/Neon Intensity",
          "description": "Cyberpunk-style glow effects (0 = none, 1 = cyberpunk level)",
          "genre_mapping": {
            "edm_pop": 0.8,
            "indie_rock": 0.1,
            "metal_rock": 0.0
          }
        },
        "textureOverlays": {
          "type": "string",
          "enum": ["none", "subtle", "moderate", "grungy"],
          "title": "Texture Overlays",
          "description": "Surface treatment from clean to distressed"
        },
        "motionSpeedMultiplier": {
          "type": "number",
          "minimum": 0.5,
          "maximum": 2.0,
          "title": "Motion Speed Multiplier",
          "description": "Animation speed scaling (0.5 = slow, 2.0 = fast)",
          "performance_impact": "medium"
        },
        "shadowIntensity": {
          "type": "string",
          "enum": ["flat", "subtle", "moderate", "dramatic"],
          "title": "Shadow Intensity",
          "description": "Depth and drama of drop shadows"
        },
        "backgroundFocusEffect": {
          "type": "string",
          "enum": ["sharp", "subtle", "moderate", "heavy"],
          "title": "Background Focus Effect",
          "description": "Blur intensity for background images"
        },
        "colorSaturation": {
          "type": "string",
          "enum": ["muted", "balanced", "vibrant", "neon"],
          "title": "Color Saturation Level",
          "description": "Overall vibrancy of the color palette"
        },
        "layoutSpacing": {
          "type": "string",
          "enum": ["compact", "balanced", "spacious"],
          "title": "Layout Spacing",
          "description": "Density of layout elements and whitespace"
        }
      },
      "required": [
        "particleEffectsDensity",
        "glowIntensity",
        "textureOverlays",
        "motionSpeedMultiplier",
        "shadowIntensity",
        "backgroundFocusEffect",
        "colorSaturation",
        "layoutSpacing"
      ],
      "additionalProperties": false
    },
    "content": {
      "type": "object",
      "title": "Band Content Configuration",
      "description": "Text content and branding information",
      "properties": {
        "bandName": {
          "type": "string",
          "minLength": 1,
          "maxLength": 50,
          "title": "Band Name",
          "description": "Primary band/artist name"
        },
        "tagline": {
          "type": "string",
          "maxLength": 100,
          "title": "Tagline",
          "description": "Short memorable phrase or slogan"
        },
        "description": {
          "type": "object",
          "properties": {
            "short": {
              "type": "string",
              "maxLength": 160,
              "description": "Brief description for meta tags and hero"
            },
            "medium": {
              "type": "string",
              "maxLength": 500,
              "description": "Medium description for about sections"
            },
            "long": {
              "type": "string",
              "maxLength": 2000,
              "description": "Detailed description for full about pages"
            }
          },
          "required": ["short", "medium", "long"]
        },
        "contact": {
          "type": "object",
          "properties": {
            "email": {
              "type": "string",
              "format": "email"
            },
            "phone": {
              "type": "string",
              "pattern": "^[+]?[0-9\\s\\-\\(\\)]+$"
            },
            "address": {
              "type": "string"
            }
          },
          "required": ["email"]
        },
        "social": {
          "type": "object",
          "properties": {
            "facebook": { "type": "string", "format": "uri" },
            "instagram": { "type": "string", "format": "uri" },
            "twitter": { "type": "string", "format": "uri" },
            "youtube": { "type": "string", "format": "uri" },
            "spotify": { "type": "string", "format": "uri" },
            "bandcamp": { "type": "string", "format": "uri" }
          }
        },
        "seo": {
          "type": "object",
          "properties": {
            "metaTitle": {
              "type": "string",
              "maxLength": 60
            },
            "metaDescription": {
              "type": "string",
              "maxLength": 160
            },
            "keywords": {
              "type": "array",
              "items": { "type": "string" },
              "maxItems": 20
            }
          },
          "required": ["metaTitle", "metaDescription", "keywords"]
        }
      },
      "required": [
        "bandName",
        "tagline",
        "description",
        "contact",
        "social",
        "seo"
      ]
    },
    "media": {
      "type": "object",
      "title": "Media Assets Configuration",
      "description": "File paths and media asset organization",
      "properties": {
        "hero": {
          "type": "object",
          "properties": {
            "background": {
              "type": "string",
              "description": "Hero background image/video path"
            },
            "fallbackImage": {
              "type": "string",
              "description": "Fallback image if video fails"
            }
          },
          "required": ["background", "fallbackImage"]
        },
        "sections": {
          "type": "object",
          "properties": {
            "about": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Background assets for about section"
            },
            "shows": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Background assets for shows section"
            },
            "gallery": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Background assets for gallery section"
            },
            "contact": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Background assets for contact section"
            }
          },
          "required": ["about", "shows", "gallery", "contact"]
        },
        "gallery": {
          "type": "object",
          "properties": {
            "images": {
              "type": "array",
              "items": { "type": "string" },
              "minItems": 1,
              "description": "Gallery image filenames"
            },
            "thumbnails": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Optional thumbnail versions"
            }
          },
          "required": ["images"]
        },
        "logos": {
          "type": "object",
          "properties": {
            "main": { "type": "string" },
            "icon": { "type": "string" },
            "light": { "type": "string" },
            "dark": { "type": "string" }
          },
          "required": ["main", "icon"]
        }
      },
      "required": ["hero", "sections", "gallery", "logos"]
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Configuration version for compatibility checking"
    }
  },
  "required": ["core", "genre", "content", "media", "version"],
  "additionalProperties": false,

  "queen_claude_integration": {
    "parameter_categories": [
      {
        "name": "visual_impact",
        "parameters": [
          "primaryColorPalette",
          "heroBackground",
          "animationIntensity"
        ],
        "description": "High visual impact parameters for quick brand transformation"
      },
      {
        "name": "genre_optimization",
        "parameters": [
          "particleEffectsDensity",
          "glowIntensity",
          "textureOverlays",
          "colorSaturation"
        ],
        "description": "Genre-specific styling parameters"
      },
      {
        "name": "performance_sensitive",
        "parameters": [
          "animationIntensity",
          "motionSpeedMultiplier",
          "particleEffectsDensity"
        ],
        "description": "Parameters that significantly impact performance"
      }
    ],
    "validation_rules": [
      {
        "rule": "high_performance_mode",
        "condition": "animationIntensity === 'minimal'",
        "enforces": {
          "particleEffectsDensity": { "max": 0.3 },
          "motionSpeedMultiplier": { "max": 1.0 }
        }
      },
      {
        "rule": "accessibility_compliance",
        "condition": "contrastLevel === 'high'",
        "enforces": {
          "colorSaturation": { "not": "neon" },
          "backgroundFocusEffect": { "max": "subtle" }
        }
      }
    ],
    "preset_mappings": {
      "edm_pop": {
        "core.colorTemperature": "cool",
        "core.borderRadiusScale": "rounded",
        "genre.glowIntensity": 0.8,
        "genre.particleEffectsDensity": 1.0,
        "genre.colorSaturation": "neon"
      },
      "indie_rock": {
        "core.colorTemperature": "warm",
        "core.borderRadiusScale": "subtle",
        "genre.glowIntensity": 0.1,
        "genre.textureOverlays": "moderate",
        "genre.colorSaturation": "muted"
      },
      "metal_rock": {
        "core.colorTemperature": "neutral",
        "core.borderRadiusScale": "sharp",
        "core.contrastLevel": "high",
        "genre.glowIntensity": 0.0,
        "genre.textureOverlays": "grungy",
        "genre.shadowIntensity": "dramatic"
      }
    }
  }
}
